<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Digital Chessboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <h1>Digital Chessboard</h1>

  <div class="layout">
    <div id="chess-wrapper">
      <div id="chess-container">
        <div id="coords-left" class="coords"></div>
        <div id="board" class="board"></div>
        <div id="coords-bottom" class="coords"></div>
      </div>

      <div class="controls">
        <button id="btn-reset">Reset</button>
        <button id="btn-prev">Prev</button>
        <button id="btn-play">Play</button>
        <button id="btn-pause">Pause</button>
        <button id="btn-next">Next</button>
        <label> Snap to moves <input type="checkbox" id="snap-moves" checked></label>
      </div>

      <div class="timeline">
        <input id="time-slider" type="range" min="0" max="10" step="0.01" value="0">
        <span id="time-label">0.00s</span>
      </div>

      <p id="status"></p>
    </div>

    <aside id="log-panel">
      <h2>Move Log</h2>
      <ol id="move-log" class="move-log"></ol>
    </aside>
  </div>

  <script src="/index.js" defer></script>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>Digital Chessboard</title>
  <link rel="stylesheet" href="/styles.css" />
</head>

<body>
  <h1>Digital Chessboard</h1>

  <div class="layout">

    <!-- LEFT SIDE: VIDEO -->
    <div id="video-panel">
      <video id="chess-video" controls>
        <source src="/videos/14.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>

    <!-- CENTER: BOARD -->
    <div id="chess-container">

      <!-- Left ranks -->
      <div id="coords-left" class="coords"></div>

      <!-- Board -->
      <div id="board" class="board"></div>

      <!-- Bottom files -->
      <div id="coords-bottom" class="coords bottom-coords"></div>
    </div>

    <!-- RIGHT SIDE: MOVE LOG -->
    <div id="log-panel">
      <h2>Move Log</h2>
      <ul id="move-log"></ul>
    </div>

  </div>

  <!-- CONTROLS -->
  <div class="controls-wrapper">
    <button id="btn-reset">Reset</button>
    <button id="btn-prev">Prev</button>
    <button id="btn-next">Next</button>
    <button id="btn-play">Play</button>
    <button id="btn-pause">Pause</button>

    <div class="slider-box">
      <input type="range" id="time-slider" min="0" max="10" step="0.01" value="0">
      <span id="time-label">0.00s</span>
      <label>
        <input type="checkbox" id="snap-moves"> Snap to moves
      </label>
    </div>

    <div id="status">Loadingâ€¦</div>
  </div>

  <script src="/app.js"></script>
</body>
</html>
